{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "send_tx",
  "type": "object",
  "properties": {
    "to": {"type": "string", "pattern": "^0x[0-9a-fA-F]{40}$"},
    "valueWei": {"type": "string", "pattern": "^\\d+$"},
    "data": {"type": "string", "pattern": "^0x[0-9a-fA-F]*$"},
    "gas": {"type": "integer", "minimum": 21000},
    "maxFeePerGas": {"type": "string", "pattern": "^\\d+$"},
    "maxPriorityFeePerGas": {"type": "string", "pattern": "^\\d+$"},
    "chainId": {"type": "integer"},
    "policy": {
      "type": "object",
      "properties": {
        "maxValueWei": {"type": "string", "pattern": "^\\d+$"},
        "allowlist": {"type": "array", "items": {"type": "string"}},
        "denylist": {"type": "array", "items": {"type": "string"}},
        "requireSimulationHash": {"type": "string"}
      },
      "required": ["maxValueWei"]
    }
  },
  "required": ["to", "valueWei", "gas", "chainId", "policy"]
}

